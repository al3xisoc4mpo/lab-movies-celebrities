<h2>Celebrity Details</h2>

{{#with data}}
  <hr />
  <h3>
    Name:
    {{name}}
  </h3>
  <h3>
    Occupation:
    {{occupation}}
  </h3>
  <h3>
    Catch Phrase:
    {{catchPhrase}}
  </h3>
  <form action="/celebrities/{{_id}}/edit" method="get">
    <button type="submit">Edit</button>
  </form>
  <form action="/celebrities/{{_id}}/delete" method="post">
    <button type="submit">Delete</button>
  </form>
  <hr />
{{/with}}

<a href="/celebrities">
  Back to celebrities
</a>